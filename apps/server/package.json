{
	"name": "@taxi/server",
	"main": "src/index.ts",
	"exports": {
		".": "./src/index.ts"
	},
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "NODE_ENV=development bun run --hot src/index.ts",
		"start": "NODE_ENV=production bun run dist/index.js"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.3.3",
		"@taxi/auth": "workspace:*",
		"@taxi/contracts": "workspace:*",
		"@taxi/logger": "workspace:*",
		"@taxi/db": "workspace:*",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"drizzle-orm": "catalog:",
		"elysia": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@taxi/config": "workspace:*",
		"@types/bun": "^1.3.4",
		"tsdown": "^0.16.5",
		"typescript": "^5.8.2"
	}
}
