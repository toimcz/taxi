{
	"name": "@taxi/server",
	"main": "src/index.ts",
	"exports": {
		".": "./src/index.ts"
	},
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "NODE_ENV=development bun run --hot src/index.ts",
		"start": "NODE_ENV=production bun run dist/index.js"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.3.3",
		"@taxi/cache": "workspace:*",
		"@taxi/contracts": "workspace:*",
		"@taxi/db": "workspace:*",
		"@taxi/logger": "workspace:*",
		"arctic": "^3.7.0",
		"bullmq": "^5.66.0",
		"dotenv": "catalog:",
		"drizzle-orm": "catalog:",
		"elysia": "catalog:",
		"meilisearch": "^0.54.0",
		"valibot": "catalog:",
		"@taxi/brevo": "workspace:*"
	},
	"devDependencies": {
		"@taxi/config": "workspace:*",
		"@types/bun": "^1.3.4",
		"tsdown": "^0.16.5",
		"typescript": "^5.8.2"
	}
}
