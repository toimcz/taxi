{
	"name": "@taxi/server",
	"version": "0.0.1",
	"main": "src/index.ts",
	"exports": {
		".": "./src/index.ts"
	},
	"module": "src/index.ts",
	"devDependencies": {
		"@taxi/config": "workspace:*",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"private": true,
	"scripts": {
		"dev": "NODE_ENV=development bun --watch run src/index.ts",
		"compile": "rm -rf .bun-tmp && mkdir .bun-tmp && cd .bun-tmp && bun build --compile --minify --bytecode ../src/index.ts --outfile ../bin/server && cd .. && rm -rf .bun-tmp",
		"start": "NODE_ENV=production ./bin/server"
	},
	"type": "module",
	"dependencies": {
		"@orpc/client": "catalog:",
		"@orpc/openapi": "catalog:",
		"@orpc/server": "catalog:",
		"@orpc/valibot": "catalog:",
		"@taxi/api": "workspace:*",
		"@taxi/contracts": "workspace:*",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.3",
		"valibot": "catalog:"
	}
}
