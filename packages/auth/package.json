{
	"name": "@taxi/auth",
	"exports": {
		".": {
			"default": "./src/index.ts"
		},
		"./*": {
			"default": "./src/*.ts"
		}
	},
	"type": "module",
	"scripts": {
		"auth:generate": "NODE_ENV=development bunx --bun @better-auth/cli@latest generate --output ../db/src/schemas/auth.ts --config ./src/cli.config.ts"
	},
	"devDependencies": {
		"@taxi/config": "workspace:*",
		"@taxi/contracts": "workspace:*"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@taxi/db": "workspace:*",
		"better-auth": "catalog:",
		"dotenv": "^17.2.3",
		"drizzle-orm": "catalog:",
		"postgres": "^3.4.7",
		"@taxi/cache": "workspace:*",
		"@taxi/logger": "workspace:*"
	}
}
