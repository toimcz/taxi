{
	"name": "@taxi/ui",
	"version": "0.0.0",
	"devDependencies": {
		"@sveltejs/kit": "^2.36.2",
		"@sveltejs/package": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@taxi/utils": "workspace:*",
		"@types/bun": "^1.3.3",
		"date-fns": "^4.1.0",
		"eslint": "^9.34.0",
		"quill": "^2.0.3",
		"svelte": "^5.38.3",
		"svelte-check": "^4.3.1",
		"svelte-popperjs": "^1.3.2",
		"typescript": "5.9.2",
		"vite": "^6.3.5"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"src",
		"!src/**/*.test.*",
		"!src/**/*.spec.*"
	],
	"scripts": {
		"dev": "svelte-kit sync && svelte-package --watch --input=src",
		"build": "svelte-kit sync && svelte-package --input=src",
		"lint": "eslint .",
		"check-types": "svelte-check --tsconfig ./tsconfig.json"
	},
	"sideEffects": [
		"**/*.css"
	],
	"type": "module",
	"dependencies": {
		"@lucide/svelte": "^0.556.0",
		"@popperjs/core": "^2.11.8"
	}
}
